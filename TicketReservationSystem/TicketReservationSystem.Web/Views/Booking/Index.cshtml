@model IEnumerable<TicketReservationSystem.Web.Models.Booking.BookingViewModel>

@{
    ViewBag.Title = "Bookings";
}

<h2>Bookings</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CustomerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HotelRoomName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NoOfPax)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NoOfDays)
        </th>
    </tr>
    @if (Model != null && Model.Any())
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HotelRoomName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NoOfPax)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NoOfDays)
                </td>
            </tr>
        }
    }
    else
            {
                <tr>
                    <td colspan="4">No booking found</td>
                </tr>
            }

</table>
